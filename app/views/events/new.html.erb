<div class="container">
  <h2>Add a New Event</h2>
    <%= form_for(@event) do |f| %>  
    <div class="form-group row">  
      <%= f.label :name, :class => "col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control"%>
      </div>
    </div>
    <div class="form-group row">  
      <%= f.label :location, :class => "col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :location, :class => "form-control" %>
      </div>
	</div>
	<div class="form-group row">
      <%= f.label :description, :class => "col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :description, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :date, :class => "col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :date, :class => ["datepicker", "form-control"] %>
      </div>
	</div>
	<div class="form-group row">
		<div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Create Event", :class => "btn btn-primary" %>
        </div>
	</div>	
	
    <% end %>
</div>
