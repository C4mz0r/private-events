<h1>Create a New Event</h1>

<div>
  <div>
    <%= form_for(@event) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :description %>
      <%= f.text_field :description %>
      
      <%= f.label :date %>
      <%= f.text_field :date, type: :date %>

      <%= f.submit "Create Event" %>
    <% end %>
  </div>
</div>
