<% provide(:title, 'Log In') %>
<div class="container">
  <h1>Log In</h1>
  <div>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group row">        
        <div class="col-sm-12">
          <%= f.text_field :id, required: true, value: "Enter user ID to log in", :class => "form-control" %>
        </div>
	  </div>
	  <div class="form-group row">
	  	<div class="col-sm-12">
          <%= f.submit "Login As User", :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>